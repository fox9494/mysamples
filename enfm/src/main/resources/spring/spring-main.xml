    <import resource="spring-transaction.xml"/>
    <!-- <import resource="spring-shiro.xml"/> -->
   
    
		
	
    <!--spring2加在property文件  -->
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
	    <description>属性配置文件加载</description>
		<property name="locations">  
           <list>  
             <!--  这里支持多种寻址方式：classpath和file   -->
              <value>classpath:frame.properties</value>  
              <!-- 推荐使用file的方式引入，这样可以将配置和代码分离  
              <value>file:/opt/demo/config/demo-mq.properties</value>  
              <value>/WEB-INF/test.properties</value> -->  
            </list>  
        </property>  
	</bean>
	
	<!--spring2.5以后加载properties文件方式，多个文件逗号分离  -->
	<!-- <context:property-placeholder location="classpath:frame.properties"/> -->

    
    <bean class="com.cpy.enfm.utils.BeanHolder"/>
    
    <context:annotation-config/>  

    <context:component-scan base-package="com.cpy.enfm.**.service"/>
    
    <context:component-scan base-package="com.cpy.enfm.**.jms"/>
    
    <context:component-scan base-package="com.cpy.enfm.**.dao"/>

    <context:property-placeholder location="classpath:spring/data-access.properties"/>

    <!-- 支持事务注解 -->
    <tx:annotation-driven transaction-manager="transactionManager"/>
    
    <!-- kaptcha 验证码配置-->
    <bean id="captchaProducer" class="com.google.code.kaptcha.impl.DefaultKaptcha">  
        <property name="config">  
            <bean class="com.google.code.kaptcha.util.Config">  
                <constructor-arg>  
                    <props>  
                        <prop key="kaptcha.border">no</prop>  
                        <prop key="kaptcha.border.color">105,179,90</prop>  
                        <prop key="kaptcha.textproducer.font.color">red</prop>  
                        <prop key="kaptcha.image.width">130</prop>  
                        <prop key="kaptcha.textproducer.font.size">40</prop>  
                        <prop key="kaptcha.image.height">50</prop>  
                        <prop key="kaptcha.session.key">code</prop>  
                        <prop key="kaptcha.textproducer.char.length">4</prop>  
                        <prop key="kaptcha.textproducer.font.names">宋体,楷体,微软雅黑</prop>    
                        
                        <!-- 去掉干扰线 -->
                        <!-- <prop key="kaptcha.noise.impl">com.google.code.kaptcha.impl.NoNoise</prop> -->
                        <!-- 使用全部是数值 -->
                        <!-- <prop key="kaptcha.textproducer.char.string">0123456789</prop> -->
                    </props>  
                </constructor-arg>  
            </bean>  
        </property>  
    </bean>  
	
